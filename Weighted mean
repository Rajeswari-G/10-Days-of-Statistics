#include<stdio.h>
int main()
{
    int a[100],w[100],i,j,n;
    float k,s=0,sum=0;
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    for(j=0;j<n;j++)
    {
        scanf("%d",&w[j]);
        s+=w[j];
    }
    for(i=0;i<n;i++)
    {
        sum=sum+(a[i]*w[i]);
    }
    k=sum/s;
    printf("%.1f",k);
    return 0;
}
